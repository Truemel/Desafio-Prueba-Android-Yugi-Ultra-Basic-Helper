<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/extra_zone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="5dp">

        <FrameLayout
            android:id="@+id/field_c"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/ex1"
            android:layout_marginHorizontal="5dp"/>

        <FrameLayout
            android:id="@+id/ex1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/field_c"
            app:layout_constraintEnd_toStartOf="@id/ex2"
            android:layout_marginHorizontal="5dp"/>

        <FrameLayout
            android:id="@+id/ex2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ex1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/monster_zone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/extra_zone"
        android:layout_marginVertical="5dp">

        <FrameLayout
            android:id="@+id/pend1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/m1"
            android:layout_marginHorizontal="5dp"/>

        <FrameLayout
            android:id="@+id/m1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/pend1"
            app:layout_constraintEnd_toStartOf="@id/m2"
            android:layout_marginHorizontal="5dp"/>

        <FrameLayout
            android:id="@+id/m2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/m1"
            app:layout_constraintEnd_toStartOf="@id/m3"
            android:layout_marginHorizontal="5dp"/>

        <FrameLayout
            android:id="@+id/m3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/m2"
            app:layout_constraintEnd_toStartOf="@id/m4"
            android:layout_marginHorizontal="5dp"/>

        <FrameLayout
            android:id="@+id/m4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/m3"
            app:layout_constraintEnd_toStartOf="@id/m5"
            android:layout_marginHorizontal="5dp"/>

        <FrameLayout
            android:id="@+id/m5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/m4"
            app:layout_constraintEnd_toStartOf="@id/pend2"
            android:layout_marginHorizontal="5dp"/>

        <FrameLayout
            android:id="@+id/pend2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/m5"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/spell_zone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/monster_zone"
        android:layout_marginVertical="5dp">

        <FrameLayout
            android:id="@+id/mag1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/mag2"
            android:layout_marginHorizontal="5dp"/>

        <FrameLayout
            android:id="@+id/mag2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/mag1"
            app:layout_constraintEnd_toStartOf="@id/mag3"
            android:layout_marginHorizontal="5dp"/>

        <FrameLayout
            android:id="@+id/mag3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/mag2"
            app:layout_constraintEnd_toStartOf="@id/mag4"
            android:layout_marginHorizontal="5dp"/>

        <FrameLayout
            android:id="@+id/mag4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/mag3"
            app:layout_constraintEnd_toStartOf="@id/mag5"
            android:layout_marginHorizontal="5dp"/>

        <FrameLayout
            android:id="@+id/mag5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/mag4"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="5dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/change_format"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/mast3"
        app:layout_constraintTop_toBottomOf="@id/spell_zone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/reset_button"
        android:layout_marginVertical="5dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/reset_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/reset_all"
        app:layout_constraintTop_toBottomOf="@id/spell_zone"
        app:layout_constraintStart_toEndOf="@id/change_format"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>